<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8">
    <div class="page-header">
      <h2>Listing all categories</h2>  
    </div>


    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to category do %>
                <span class="glyphicon glyphicon-eye-open"></span>
                <% end %>              
                      
            </td>

            <td><%= link_to edit_category_path(category) do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            </td>

            <td><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do%>
                <span class="glyphicon glyphicon-minus"></span>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Category', new_category_path,  class: "btn btn-primary" %>
  </div>

  <div class="col-md-4">
    <div class="page-header">
      <h2>Some stats</h2>
    </div>
  </div>
  
</div>
